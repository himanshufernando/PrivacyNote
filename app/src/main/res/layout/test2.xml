<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/appWhite">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_alignParentTop="true"
        android:layout_height="60dip"
        android:background="#0299e3"
        android:layout_alignParentStart="true"
        android:id="@+id/relativeLayoutTitleBar"
        android:layout_alignParentLeft="true">

        <RelativeLayout
            android:id="@+id/relativeLayoutcamara"
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">

            <ImageView
                android:layout_width="50dip"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:id="@+id/imageView13"
                android:src="@drawable/previous"/>
        </RelativeLayout>

        <tkhub.project.PrivacyNote.Font.FontSpalsh
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:id="@+id/textViewtitle"
            android:text="Password"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/relativeLayoutcamara"
            android:layout_toEndOf="@+id/relativeLayoutcamara"
            android:textColor="@android:color/white" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/relativeLayoutTitleBar"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@color/black_transparent">

        <RelativeLayout
            android:id="@+id/relativeLayout2"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_below="@+id/relativeLayoutTitleBar"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">

            <tkhub.project.PrivacyNote.Font.TextViewFontAwesome
                android:text="@string/icon_navigation_sms"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/relativeLayoutTitleBar"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:textSize="50sp"
                android:textColor="@color/iconBlue"
                android:id="@+id/textView88" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_below="@+id/relativeLayout2"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:id="@+id/relativeLayout4"
            android:layout_height="wrap_content"
            android:background="@drawable/shadow_borders"
            android:layout_margin="10dp">

            <tkhub.project.PrivacyNote.Font.FontSpalsh
                android:text="Reset your password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView86"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:textSize="18sp"
                android:textColor="@color/appBlack" />

            <tkhub.project.PrivacyNote.Font.FontSpalsh
                android:text="Enter your email address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView87"
                android:layout_below="@+id/textView86"
                android:layout_alignLeft="@+id/textView86"
                android:layout_alignStart="@+id/textView86" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textEmailAddress"
                android:ems="10"
                android:layout_below="@+id/textView87"
                android:layout_alignLeft="@+id/textView87"
                android:layout_alignStart="@+id/textView87"
                android:id="@+id/edt_email"
                android:layout_marginRight="10dp"
                android:hint="Email"
                android:layout_marginTop="20dp" />

            <Button
                android:layout_width="match_parent"
                android:id="@+id/button5"
                android:layout_below="@+id/edt_email"
                android:layout_alignLeft="@+id/edt_email"
                android:layout_alignStart="@+id/edt_email"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:text="SEND"
                android:background="@drawable/button_blue"
                android:textColor="@android:color/white"
                android:layout_marginBottom="30dp"
                android:layout_height="50dp" />

        </RelativeLayout>



    </RelativeLayout>


</RelativeLayout>