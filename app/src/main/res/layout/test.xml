<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/appWhite">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_alignParentTop="true"
        android:layout_height="60dip"
        android:background="#0299e3"
        android:layout_alignParentStart="true"
        android:id="@+id/relativeLayoutTitleBar"
        android:layout_alignParentLeft="true">

        <RelativeLayout
            android:id="@+id/relativeLayoutcamara"
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">

            <ImageView
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:id="@+id/imageView13"
                android:src="@drawable/previous"
                android:layout_width="50dp" />
        </RelativeLayout>

        <tkhub.project.PrivacyNote.Font.FontSpalsh
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:id="@+id/textViewtitle"
            android:text="Reset"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/relativeLayoutcamara"
            android:layout_toEndOf="@+id/relativeLayoutcamara"
            android:textColor="@android:color/white" />

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/relativeLayoutTitleBar"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@color/black_transparent">

        <RelativeLayout
            android:id="@+id/relativeLayout2"
            android:layout_width="match_parent"
            android:layout_below="@+id/relativeLayoutTitleBar"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_height="70dp">

            <tkhub.project.PrivacyNote.Font.TextViewFontAwesome
                android:text="@string/icon_lockopen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/relativeLayoutTitleBar"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:textSize="50sp"
                android:textColor="@color/iconBlue"
                android:id="@+id/textView88" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_below="@+id/relativeLayout2"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:id="@+id/relativeLayout4"
            android:layout_height="wrap_content"
            android:background="@drawable/shadow_borders"
            android:layout_margin="10dp">

            <tkhub.project.PrivacyNote.Font.FontSpalsh
                android:text="Reset your password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView86"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:textSize="18sp"
                android:textColor="@color/appBlack" />

            <tkhub.project.PrivacyNote.Font.FontSpalsh
                android:text="Enter your reset code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView87"
                android:layout_below="@+id/textView86"
                android:layout_alignLeft="@+id/textView86"
                android:layout_alignStart="@+id/textView86"
                android:layout_marginTop="15dp"
                android:textColor="@color/cardview_dark_background"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:layout_below="@+id/textView87"
                android:layout_alignLeft="@+id/textView87"
                android:layout_alignStart="@+id/textView87"
                android:id="@+id/edt_code"
                android:layout_marginRight="10dp"
                android:hint="Code"
                android:layout_marginTop="10dp"
                android:textColor="@color/cardview_dark_background"
                android:inputType="number" />

            <TextView
                android:text="Enter your new password "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView91"
                android:layout_below="@+id/edt_code"
                android:layout_alignLeft="@+id/edt_code"
                android:layout_alignStart="@+id/edt_code"
                android:layout_marginTop="5dp"
                android:textColor="@color/cardview_dark_background" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:ems="10"
                android:id="@+id/editText8"
                android:layout_below="@+id/textView91"
                android:layout_alignLeft="@+id/textView91"
                android:layout_alignStart="@+id/textView91"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp"
                android:hint="New Password " />

            <TextView
                android:text="Enter your confirm password :"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/cardview_dark_background"
                android:id="@+id/textView92"
                android:layout_below="@+id/editText8"
                android:layout_alignLeft="@+id/editText8"
                android:layout_alignStart="@+id/editText8"
                android:layout_marginTop="5dp" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:ems="10"
                android:id="@+id/editText9"
                android:layout_below="@+id/textView92"
                android:layout_alignLeft="@+id/textView92"
                android:layout_alignStart="@+id/textView92"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp"
                android:hint="Confirm Password" />

            <Button
                android:text="Reset"
                android:layout_width="match_parent"
                android:id="@+id/button6"
                android:layout_height="50dp"
                android:layout_below="@+id/editText9"
                android:layout_alignLeft="@+id/editText9"
                android:layout_alignStart="@+id/editText9"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/button_blue"
                android:textColor="@android:color/white"
                android:layout_marginBottom="20dp" />

        </RelativeLayout>

    </RelativeLayout>


</RelativeLayout>